<!DOCTYPE html>
<html>

<head>
    <% include ./partials/head %>
    <script src="/static/js/overview.js"></script>
</head>

<body>

    <% include ./partials/header %>

    <br>

    <div class="container-fluid">
        <% if(global.config.historicalData.enabled) { %>
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div id="score-inc" class="card-body">
                        <h5 class="card-title">Score increase</h5>
                        <p class="card-text">

                            <canvas id="score-increase-chart"></canvas>

                        </p>
                        <ol class="two-columns"></ol>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card">
                    <div id="kills-inc" class="card-body">
                        <h5 class="card-title">Kills increase</h5>
                        <p class="card-text">

                            <canvas id="kills-increase-chart"></canvas>

                        </p>
                        <ol class="two-columns"></ol>
                    </div>
                </div>
            </div>
        </div>

        <hr>
        <% } %>
        <table class="table" id="overview">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Score</th>
                    <th>Kill/death ratio</th>
                    <th>Headshot %</th>
                    <th>Kills</th>
                    <th>Deaths</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>

    </div>
</body>

</html>